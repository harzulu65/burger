<h1>Burgers!</h1>


<div class="container">
  <div class="eatBurger">
    <h2>Eat-Da-Burger!</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="waiting">
    <h2>WAITING AREA!</h2>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="footer">
  <h2>Add a Burger</h2>
  <form class="create-form">
    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>
    <div class="form-group">
      <label for="slee">Ready or Waiting?</label><br>
      <input type="radio" name="sleepy" value="1" checked> Waiting!<br>
      <input type="radio" name="sleepy" value="0"> Ready to Eat
    </div>
    <button id="addBurger" type="submit">Add Burger</button>
  </form>
</div>